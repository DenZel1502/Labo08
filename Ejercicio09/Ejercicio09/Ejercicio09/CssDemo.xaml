<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio09.CssDemo">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Margin="20">
            <StackLayout>
                <Label x:Name="Titulo" Text="REGISTRO"  HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />
            </StackLayout>
            <StackLayout Orientation="Vertical">
                <Entry Placeholder="Ingrese Usuario:"></Entry>
                <Entry Placeholder="Ingrese Contraseña:"></Entry>
                <Entry Placeholder="Ingrese Correo:" ></Entry>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Button x:Name="signup" Text="Registrar"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>